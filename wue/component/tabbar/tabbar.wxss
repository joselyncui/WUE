/* wue/views/tabbar/tabbar.wxss */
.tabbar-container {
  width: 100%;
  height: 50px;
  position: fixed;
  bottom: 0;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  box-sizing: border-box;
  justify-content: space-around;
}

.tab-item {
  display: flex;
  width: 75px;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tab-item-image {
  width: 32px;
  height: 32px;
  display: block;
}

.tab-item-text {
  width: 100%;
  font-size: 13px;
  text-align: center;
  color: black;
}

.tab-item-text-active {
  color: red;
}