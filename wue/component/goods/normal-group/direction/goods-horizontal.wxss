
.goods-horizontal-view {
  display: inline-block;
  box-sizing: border-box;
  overflow: hidden;
  padding: 0 10px;
}

.goods-horizontal-view image {
  display: block;
}

.goods-horizontal-title {
  display: block;
  font-size: 28rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.goods-horizontal-price {
  display: block;
  font-size: 24rpx;
  color: red;
}