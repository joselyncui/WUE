/* wue/component/bubble/bubble.wxss */
.bubble {
  height: 30px; 
  border-radius: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 45px;
  left: 10px;
  background-color: rgba(0,0,0,0.7);
}

.bubble-image-container {
  width: 26px;
  height: 26px;
  border-radius: 50%;
  padding: 2px;
  background-color: white;
}

.bubble-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.bubble-text {
  font-size: 11px;
  color: white;
  margin: 0 10px;
}

.bubble-text-time {
  font-size: 11px;
  color: grey;
  margin: 0 10px;
}