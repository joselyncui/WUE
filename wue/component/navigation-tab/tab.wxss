/* navigation-tab.wxss */
.navigationTab {
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  white-space: nowrap; 
  top: 0;
}

.navigationTabItem {
  display: inline-block;
  width: 100rpx;
  text-align: center;
}

.title {
  display: block;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 16px;
}

.active {
  color: #f00;
}

.bottom-line {
  width: 100%;
  height: 4rpx;
  background-color: #f00;
}